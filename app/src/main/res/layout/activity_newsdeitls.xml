<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NEWSDEITLS"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:id="@+id/coverimage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/download8" />

        <TextView
            android:id="@+id/covertittle"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#59000000"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:padding="10dp"
            android:text="গ্যালাক্সি রিং নিয়ে কাজ করবে স্যামসাং"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative"
    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/covertext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#458BC34A"
                android:ellipsize="end"
                android:gravity="center"
                android:padding="10dp"
                android:text="গ্যালাক্সি রিং নিয়ে কাজ করবে স্যামসাং\n  বল্প বাজেটে অফিশিয়াল বা ক্রিয়েটিভ কাজ বা গেমিং বা মুভি দেখার জন্য VA Panel মনিটর অন্যতম। এর কারণ হচ্ছে ডেপথ কালার একুরেসি এবং কন্ট্রাস্ট রেশিও ও 178° ভিউ এঙ্গেল এবং 75Hz রিফ্রেশ রেট - যা আপনি সচারাচরই খুঁজে থাকেন। স্লিম এন্ড স্লিক রেডমি এই মনিটরটি আমাদের কাছে পাচ্ছেন বছর সেরা দামে এবং সেই সাথে পাচ্ছেন ২ বছরের ওয়ারেন্টি নিশ্চয়তা।আপনার যদি কমপক্ষে চার-পাঁচ টি দেশ ভ্রমন থাকে এবং বিগত ছয় মাস থেকে ব্যাংক ব্যালেন্স ৮ লক্ষ টাকা বেশি থেকে থাকে, তাহলে আপনিও অস্ট্রেলিয়ার ভিজিট ভিসা পেতে পারেন। বিশ্বের যেকোনো প্রান্ত থেকে আমাদের মাধ্যমে অনলাইনে অস্ট্রেলিয়ার ভিজিট ভিসা প্রসেস করতে পারেন। এর জন্য আপনাকে আমাদের অফিসেও আসতে হবে না, কিংবা অস্ট্রেলিয়া হাইকমিশনেও যেতে হবে না। আমার অনলাইনে আপনার ভিসার আবেদন করবো, আপনাকে শুধু নিকটস্থ VFS সেন্টারের গিয়ে ফিঙ্গার প্রিন্ট দিতে হবে।
💥 অস্ট্রেলিয়া ভিজিট ভিসা আবেদনের জন্য প্রয়োজনীয় কাগজপত্র সম্পর্কে বিস্তারিত জানতে "
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="#E35252"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:scaleType="centerCrop"
        android:src="@drawable/microphone" />

</RelativeLayout>